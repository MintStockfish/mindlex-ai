{
    "name": "mindlex-ai",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "pnpm typegen && next dev",
        "build": "pnpm typegen && next build",
        "start": "next start",
        "lint": "next lint --fix",
        "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
        "typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
        "build:prod": "pnpm typegen && next build && opennextjs-cloudflare build",
        "deploy:prod": "opennextjs-cloudflare deploy",
        "test": "jest --forceExit",
        "test:watch": "jest --watch",
        "prepare": "husky"
    },
    "dependencies": {
        "@opennextjs/cloudflare": "^1.11.1",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-progress": "^1.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.545.0",
        "next": "15.4.6",
        "next-themes": "^0.4.6",
        "radix-ui": "^1.4.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-router-dom": "^7.9.5",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/postcss": "^4.1.17",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.19.24",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "eslint": "^9.39.1",
        "eslint-config-next": "15.4.6",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "tailwindcss": "^4.1.17",
        "typescript": "^5.9.3",
        "whatwg-fetch": "^3.6.20",
        "wrangler": "^4.46.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
